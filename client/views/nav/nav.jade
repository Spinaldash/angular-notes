nav.navbar.navbar-default(ng-controller='NavCtrl')
  .container-fluid
    .navbar-header
      button.navbar-toggle.collapsed(data-toggle="collapse", data-target="#navbar")
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Angular Notes
    #navbar.collapse.navbar-collapse
      ul.nav.navbar-nav.navbar-right(ng-hide='email')
        li.active: a(ui-sref='register'): i.fa.fa-plus &nbsp; Register
        li.active: a(ui-sref='login'): i.fa.fa-minus &nbsp; Login
      ul.nav.navbar-nav.navbar-right(ng-show='email')
        li.active: a(href='#', ng-click='logout()'): {{email}}
      ul.nav.navbar-nav.navbar-right
        li.active: a(ui-sref='home'): i.fa.fa-home &nbsp; Home
        li.active: a(ui-sref='faq'): i.fa.fa-question &nbsp; Faq
        li.active: a(ui-sref='contact'): i.fa.fa-pencil &nbsp; Contact
